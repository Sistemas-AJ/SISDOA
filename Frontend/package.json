{
  "name": "sisdoa",
  "version": "1.0.0",
  "description": "Sistema de Documentos y Archivos - Gestión documental integral",
  "author": "Adrian Alejandro Ruiz Carreño y Alister Vasquez",
  "private": true,
  "main": "build/electron.js",
  "homepage": ".",
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.2.1",
    "electron-is-dev": "^3.0.1",
    "gsap": "^3.13.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.3",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.19",
    "three": "^0.180.0",
    "wait-on": "^9.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "prepackage": "npm run build",
    "package": "electron-builder build --publish=never",
    "package-win": "electron-builder build --win --publish=never",
    "package-mac": "electron-builder build --mac --publish=never",
    "package-linux": "electron-builder build --linux --publish=never",
    "dist": "npm run build && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.sisdoa.app",
    "productName": "SISDOA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "build/electron.js",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "../Backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__/**", "!**/.git/**", "!**/node_modules/**", "!**/.venv/**"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SISDOA"
    }
  }
}
